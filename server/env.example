# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database - Supabase PostgreSQL
# For Backend API (Render): Use Supavisor Pooler Session Mode (Port 5432)
# 
# IMPORTANT: Render only accepts IPv4 connections, but Supabase direct connection maps to IPv6.
# Solution: Use Supavisor pooler in session mode (port 5432) instead of direct connection.
# 
# Get connection string from: Supabase Dashboard -> Project Settings -> Database -> Connection string
# Select "Connection pooling" -> "Session mode" (NOT "Direct connection")
# Format: postgres://[db-user].[project-ref]:[db-password]@aws-0-[aws-region].pooler.supabase.com:5432/postgres
# Example: postgres://postgres.dcalajbubsmcujcoaiqn:l5Bqyvq9f8miEbpA@aws-1-ap-southeast-2.pooler.supabase.com:5432/postgres
# 
# Note: Replace [aws-region] with your actual region (e.g., us-east-1, ap-southeast-1)
# Option 1: Connection String (Alternative - will be overridden by individual parameters if set)
# DATABASE_URL=postgres://postgres.dcalajbubsmcujcoaiqn:[YOUR_PASSWORD]@aws-1-ap-southeast-2.pooler.supabase.com:5432/postgres
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Option 2: Individual Parameters (Recommended - Priority)
# Note: Port 6543 is Transaction Mode (for serverless), Port 5432 is Session Mode (for persistent servers)
# For Render (persistent server), use Session Mode (port 5432)
# For Cloud Run (serverless), use Transaction Mode (port 6543)
# 
# Individual parameters will be used if set (priority over DATABASE_URL)
DATABASE_USERNAME=postgres.dcalajbubsmcujcoaiqn
DATABASE_PASSWORD=l5Bqyvq9f8miEbpA
DATABASE_HOST=aws-1-ap-southeast-2.pooler.supabase.com
DATABASE_PORT=5432
DATABASE_NAME=postgres

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:8080"]

# Supabase Configuration (for Python client library - REST API)
SUPABASE_URL=https://dcalajbubsmcujcoaiqn.supabase.co
SUPABASE_ANON_KEY=sb_publishable_eiuXYxArpNC5HSu8huYUGg_SEdhDeqw
SUPABASE_SERVICE_ROLE_KEY=sb_secret_puv6GTgB6iXtI4VnX--Ylw_1jAzrUTV
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Redis Cache & Queue
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300
REDIS_RATE_LIMIT_TTL=3600

# AI & LLM - Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_CHAT=gemini-2.5-flash
GEMINI_MODEL_COMPLEX=gemini-2.5-pro

# AI Server (Cloud Run) RAG
RAG_TOP_K=3
RAG_TTL_SECONDS=900
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Vector Search
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.7

# File Storage
UPLOAD_MAX_SIZE=52428800
ALLOWED_EXTENSIONS=[".pdf", ".docx", ".txt", ".md", ".jpg", ".png", ".mp4"]
STORAGE_BUCKET=materials

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
CHAT_RATE_LIMIT=50
AI_RATE_LIMIT=20

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true

# Email (optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME="E-Learning Platform"

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_DEBATE_ROOM=true
ENABLE_SOCRATIC_BOT=true
ENABLE_AUTO_QUIZ_GENERATION=true
